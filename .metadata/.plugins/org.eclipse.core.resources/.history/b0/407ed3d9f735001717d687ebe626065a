<mapper namespace="com.nyf.dao.TagDao">
<resultMap type="com.nyf.pojo.Tag" id="tagMap">
<id column="id" property="id" jdbcType="INTEGER"/>
<result column="name" property="name" jdbcType="VARCHAR"/>
<collection property="products" column="id" javaType="com.nyf.pojo.Product" select="com.nyf.dao.ProductDao.selectByTagId"></collection>
</resultMap>
<select id="selectTagById" parameterType="com.nyf.pojo.Tag" resultMap="tagMap">
		select * from tag where id = #{tag.id};
	</select>
</mapper>