package com.qingke.tianqi;

import java.util.Scanner;

import com.qing.pojo.LocationNow;
import com.qing.pojo.Results;

public class TestWeather {
	public static void main(String[] args) {
		
		weather w = new weather();

		//Scanner sc = new Scanner(System.in);
		//System.out.println(w.getWeather("beijing"));
		
		print(w.getResult("beijing"));
		
	}
	
	public static void print(Results results) {
		LocationNow ln = results.getResult().get(0);
		System.out.println(ln.getLocation().getName());
		System.out.println(ln.getLocation().getCountry());
		System.out.println(ln.getLocation().getPath());
		System.out.println(ln.getLocation().getTimezone_offset());
		System.out.println(ln.getNow().getText());
		System.out.println(ln.getNow().getTemperature());
		System.out.println(ln.getLast_update());
	}
}

